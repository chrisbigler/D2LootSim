{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python",
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(run_simulation|compare_systems)",
      "dest": "/api/index.py"
    }
  ]
}
